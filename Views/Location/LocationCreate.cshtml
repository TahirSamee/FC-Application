@model FC_Application.Models.Location;
@{
    ViewData["Title"] = "Location Create";
}
<div class="content">
    <form asp-action="LocationCreate" asp-controller="Location" method="post" class="needs-validation" novalidate>
        <div class="block block-rounded shadow-sm border">
            <div class="block-header block-header-default bg-primary text-white">
                <h3 class="block-title">Create Location Entry</h3>
            </div>

            <div class="block-content">
                <div class="row g-3">
                    <!-- First Column -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="SurveyorName" placeholder="Surveyor" >
                            <label>Surveyor</label>
                            
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="LocationID" placeholder="Location ID" required>
                            <label>Location ID<span class="text-danger">*</span></label>
                            <span asp-validation-for="LocationID" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="SalesOrderID" placeholder="Order ID" required>

                            <label>Order ID<span class="text-danger">*</span></label>
                            <span asp-validation-for="SalesOrderID" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="ClientLocationIdentifier" placeholder="Client Identifier">
                            <label>Client Identifier</label>
                        </div>
                        <div class="form-floating mb-3">
                            <select class="form-select" name="Status" required>

                                <option value="Pending Schedule">Pending Schedule</option>
                                <option value="Scheduled">Scheduled</option>
                                <option value="Survey Complete">Survey Complete</option>
                                <option value="Verified">Verified</option>
                                <option value="QA/QC">QA/QC</option>
                                <option value="Return Visit">Return Visit</option>
                                <option value="Complete">Complete</option>
                                <option value="Invoiced">Invoiced</option>
                            </select>
                            <label>Status<span class="text-danger">*</span></label>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" name="ServiceDueDate" placeholder="Due Date">
                            <label>Due Date</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" name="ServiceDate" placeholder="Service Date">
                            <label>Service Date</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="Client" placeholder="Client" required>

                            <label>Client<span class="text-danger">*</span></label>
                            <span asp-validation-for="Client" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="Customer" placeholder="Customer">
                            <label>Customer</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="BrandName" placeholder="Brand" required>


                            <label>Brand<span class="text-danger">*</span></label>
                            <span asp-validation-for="BrandName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="LocationNumber" placeholder="Location Number">
                            <label>Location #</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="LocationNickname" placeholder="Nickname">
                            <label>Nickname</label>
                        </div>
                        <div class="form-floating mb-3">
                            <select class="form-select" name="Service" required>
                                <option value="CPAEX Project Management">CPAEX Project Management</option>
                                <option value="Equipment Validations">Equipment Validations</option>
                                <option value="Facility Assessments">Facility Assessments</option>
                                <option value="Fixed Asset Survey">Fixed Asset Survey</option>
                            </select>
                            <label>Service</label>
                            <span asp-validation-for="Service" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="Address" placeholder="Address" required>

                            <label>Address<span class="text-danger">*</span></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="City" placeholder="City" required>

                            <label>City<span class="text-danger">*</span></label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="State" placeholder="State" required>

                            <label>State<span class="text-danger">*</span></label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Second Column -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                           
                           

                            <input type="text" class="form-control" name="Zip" placeholder="ZIP" required>

                            <label>ZIP<span class="text-danger">*</span></label>
                            <span asp-validation-for="Zip" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" name="PhoneNumber" placeholder="Phone">
                            <label>Phone</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" name="Email" placeholder="Email">
                            <label>Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="ManagerName" placeholder="Manager">
                            <label>Manager</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="L1ManagerName" placeholder="L1 Manager">
                            <label>L1 Manager</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" name="L1ManagerEmail" placeholder="L1 Email">
                            <label>L1 Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" name="L1ManagerPhone" placeholder="L1 Phone">
                            <label>L1 Phone</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="L2ManagerName" placeholder="L2 Manager">
                            <label>L2 Manager</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" name="L2ManagerEmail" placeholder="L2 Email">
                            <label>L2 Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" name="L2ManagerPhone" placeholder="L2 Phone">
                            <label>L2 Phone</label>
                        </div>
                        <div class="form-floating mb-3">
                            <select class="form-select" name="AssetsVerified">
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                            <label>Verified</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" name="AssetCount" placeholder="# Assets">
                            <label># Assets</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" name="SqFt" placeholder="Sq Ft">

                            <label>Sq Ft</label>
                            <span asp-validation-for="SqFt" class="text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="Value" placeholder="Value">
                            <label>Value</label>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" name="Notes" style="height: 80px" placeholder="Notes"></textarea>
                            <label>Notes</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="Verifier" placeholder="Verifier">
                            <label>Verifier</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="date" class="form-control" name="DateVerified" placeholder="Verified Date">
                            <label>Verified Date</label>
                        </div>
                    </div>
                </div>
            </div>
            @* Shows all validation errors *@
           
            

            <div class="block-content block-content-full d-flex justify-content-between align-items-center bg-body-light border-top p-3">
                <div>
                    <a href="\Location\Location" class="btn btn-alt-dark">
                        <i class="fa fa-arrow-left me-1"></i> Back
                    </a>
                </div>
                <div>
                    <button type="reset" class="btn btn-alt-secondary me-2">
                        <i class="fa fa-sync-alt me-1"></i> Reset
                    </button>
                    <button type="submit" class="btn btn-alt-primary">
                        <i class="fa fa-check me-1"></i> Submit
                    </button>
                </div>
            </div>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
</div>

